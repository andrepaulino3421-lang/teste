generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum Channel {
  STORE
  MARKETPLACE
  RESTAURANT
}

enum Plan {
  FREE
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String               @id @default(cuid())
  name          String?
  email         String               @unique
  passwordHash  String
  role          UserRole             @default(USER)
  defaultChannel Channel?
  createdAt     DateTime             @default(now())
  presets       Preset[]
  calculations  Calculation[]
  subscription  Subscription?
  billingClaims BillingClaim[]
  resetTokens   PasswordResetToken[]
}

model Preset {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel    Channel
  name       String
  configJson Json
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([userId, channel])
}

model Calculation {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel    Channel
  inputJson  Json
  outputJson Json
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
}

model Subscription {
  id           String             @id @default(cuid())
  userId       String             @unique
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan         Plan               @default(FREE)
  status       SubscriptionStatus @default(ACTIVE)
  provider     String             @default("MANUAL")
  startedAt    DateTime           @default(now())
  endsAt       DateTime?
  metadataJson Json?
}

model BillingClaim {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchaseEmail String
  orderCode     String?
  note          String?
  status        ClaimStatus @default(PENDING)
  adminNote     String?
  createdAt     DateTime    @default(now())
  processedAt   DateTime?

  @@index([status, createdAt])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash  String
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
  @@index([tokenHash])
}
